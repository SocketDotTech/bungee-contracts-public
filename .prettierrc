{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "tabWidth": 4,
        "printWidth": 80,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": ["*.js", "*.md"],
      "options": {
        "tabWidth": 2,
        "printWidth": 80,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "all"
      }
    }
  ]
}
